{
    "manifest_version": 3,
    "name": "HelpMeOut",
    "description": "A Chrome Extension for Screen Recording and Sharing",
    "version": "1.0.1",
    "icons": {
      "16": "images/icon1.png",
      "32": "images/icon2.png",
      "48": "images/icon3.png",
      "128": "images/icon3.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_title": "HelpMeOut",
        "default_icon": "images/icon1.png"
      },
      "permissions": [
        "activeTab",
        "desktopCapture",
        "storage"
      ]
}