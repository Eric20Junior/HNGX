{
  "manifest_version": 3,
  "name": "HelpMeOut",
  "description": "A Chrome Extension for Screen Recording and Sharing",
  "icons": {
    "128": "./images/logo.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./images/logo.png",
      "32": "./images/logo.png",
      "128": "./images/logo.png"
    }
  },

  "host_permissions": ["http://*/", "https://*/*"],

  "permissions": [
        "activeTab",
        "tabs", 
        "scripting"
    ],
  "version": "1.0.1"
}
